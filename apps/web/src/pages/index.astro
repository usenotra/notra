---
import "../styles/global.css";

const title = "Notra - Turn your work into content.";
const description =
	"Notra connects to GitHub, Linear, and Slack, captures your team's activity, and uses AI to generate blog posts, changelogs, tweets, and LinkedIn posts.";
const canonicalURL = Astro.url.href;

const heroIcons = [
	{ src: "/logos/GitHub Light.png", alt: "GitHub" },
	{ src: "/logos/Linear Light.png", alt: "Linear" },
	{ src: "/logos/Slack Light.png", alt: "Slack" },
];

const steps = [
	{
		title: "Connect your tools",
		desc: "Link GitHub, Linear, and Slack in seconds. Notra collects data from your existing workflow through webhooks and native integrations.",
	},
	{
		title: "AI analyzes your work",
		desc: "The content engine scans your activity, picks out what matters, and drafts blog posts, changelogs, and social posts in your brand voice.",
	},
	{
		title: "Wake up to drafts",
		desc: "Every morning, find blog posts, changelogs, and social updates ready to review or publish.",
	},
];

const features = [
	{
		title: "Automatic data collection",
		desc: "Connect GitHub, Linear, Slack and more. Notra captures your team's activity through webhooks and native integrations, without any manual input.",
		screenshot: "/screenshots/integrations.png",
	},
	{
		title: "Intelligent content generation",
		desc: "An AI agent analyzes your raw data and generates blog posts, changelogs, and social posts tailored to your brand.",
		screenshot: "/screenshots/content.png",
	},
	{
		title: "Fully autonomous",
		desc: "Go to sleep and wake up to content drafts waiting to be reviewed or published. Notra works while you rest.",
		screenshot: "/screenshots/workflows.png",
	},
	{
		title: "Your voice, your brand",
		desc: "Configure your brand tone and style preferences. Every draft sounds like it was written by your team.",
		screenshot: "/screenshots/brand.png",
	},
];

const footerCategories = [
	{
		title: "Product",
		links: [
			{ label: "How it works", href: "#how-it-works" },
			{ label: "Features", href: "#features" },
		],
	},
	{
		title: "Legal",
		links: [
			{ label: "Privacy Policy", href: "/privacy" },
			{ label: "Terms of Service", href: "/terms" },
			{ label: "Legal Notice", href: "/legal" },
		],
	},
	{
		title: "Social",
		links: [
			{ label: "X (Twitter)", href: "https://x.com/usenotra", external: true },
		],
	},
];

const logoSvg = `<path d="M174.167 363.25V498.75" stroke="#8E51FF" stroke-width="45" stroke-linecap="round" stroke-linejoin="round"/><path d="M241.917 472.989V431C241.917 388.417 241.917 367.124 255.146 353.896C268.375 340.666 289.666 340.667 332.25 340.667H422.583C443.629 340.667 454.15 340.666 462.452 344.105C473.518 348.689 482.312 357.482 486.896 368.549C490.334 376.849 490.334 387.371 490.334 408.417H558.084V374.542C558.084 364.019 558.084 358.758 559.802 354.608C562.094 349.074 566.491 344.678 572.024 342.386C576.175 340.667 581.437 340.667 591.959 340.667C602.48 340.667 607.742 340.667 611.893 342.386C617.426 344.678 621.823 349.074 624.115 354.608C625.834 358.758 625.834 364.019 625.834 374.542V532.625C625.834 543.146 625.834 548.408 624.115 552.559C621.823 558.092 617.426 562.489 611.893 564.781C607.742 566.5 602.48 566.5 591.959 566.5C581.437 566.5 576.175 566.5 572.024 564.781C566.491 562.489 562.094 558.092 559.802 552.559C558.084 548.408 558.084 543.146 558.084 532.625V476.167H490.334C490.334 518.75 490.334 540.041 477.104 553.271C463.875 566.5 442.583 566.5 400 566.5H337.017C323.442 566.5 316.654 566.5 310.253 564.562C303.853 562.625 298.205 558.858 286.909 551.328L282.142 548.151C262.451 535.023 252.605 528.458 247.261 518.472C241.917 508.488 241.917 496.654 241.917 472.989Z" stroke="#8E51FF" stroke-width="45" stroke-linecap="round" stroke-linejoin="round"/><path d="M241.917 431H174.167" stroke="#8E51FF" stroke-width="45" stroke-linecap="round" stroke-linejoin="round"/><path d="M366.125 340.667V272.917" stroke="#8E51FF" stroke-width="45" stroke-linecap="round" stroke-linejoin="round"/><path d="M287.083 272.917H445.167" stroke="#8E51FF" stroke-width="45" stroke-linecap="round" stroke-linejoin="round"/>`;
---

<html lang="en" class="scroll-smooth overflow-x-hidden">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonicalURL} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="Notra" />
		<meta property="og:locale" content="en_US" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Notra" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#ffffff" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
	</head>

	<body class="antialiased bg-background text-foreground relative leading-relaxed font-['Inter',system-ui,sans-serif]">
		<nav id="navbar" class="fixed inset-x-0 top-0 z-50 py-4 backdrop-blur-xl bg-background/85 border-b border-border transition-shadow [&.scrolled]:shadow-[0_1px_0.5rem_rgba(0,0,0,0.04)]">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12 flex items-center justify-between">
				<a href="/" class="inline-flex items-center gap-2 text-[1.375rem] font-bold text-foreground no-underline tracking-[-0.04em]">
					<svg class="w-7 h-7 shrink-0" viewBox="140 240 520 360" fill="none" xmlns="http://www.w3.org/2000/svg" set:html={logoSvg} />
					Notra
				</a>
				<button class="hidden max-md:block bg-transparent border-none text-foreground cursor-pointer p-1" aria-label="Toggle menu" id="nav-toggle">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
						<line x1="4" y1="7" x2="20" y2="7" />
						<line x1="4" y1="12" x2="20" y2="12" />
						<line x1="4" y1="17" x2="20" y2="17" />
					</svg>
				</button>
				<ul class="hidden md:flex items-center gap-8 list-none max-md:[&.open]:flex max-md:[&.open]:flex-col max-md:[&.open]:absolute max-md:[&.open]:top-full max-md:[&.open]:inset-x-0 max-md:[&.open]:bg-background max-md:[&.open]:border-b max-md:[&.open]:border-border max-md:[&.open]:p-6 max-md:[&.open]:gap-5 max-md:[&.open]:shadow-lg" id="nav-links">
					<li><a href="#how-it-works" class="text-muted-foreground no-underline text-sm font-medium">How it works</a></li>
					<li><a href="#features" class="text-muted-foreground no-underline text-sm font-medium">Features</a></li>
					<li><a href="https://app.notra.io" class="inline-flex items-center gap-1.5 px-5 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-semibold no-underline hover:bg-primary/90">Get Started</a></li>
				</ul>
			</div>
		</nav>

		<section class="relative min-h-screen flex items-center justify-center pt-36 pb-20 text-center">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12">
				<div class="relative z-1 max-w-[50rem] mx-auto">
					<h1 class="font-extrabold text-[clamp(2.75rem,6.5vw,4rem)] leading-tight tracking-[-0.035em] text-foreground mb-6 flex flex-wrap items-center justify-center gap-x-3 gap-y-2.5 text-balance max-w-[43.75rem] mx-auto">
						<span class="text-foreground">Turn your</span>
						{heroIcons.map((icon) => (
							<span class="inline-flex items-center justify-center shrink-0">
								<img class="w-12 h-12" src={icon.src} alt={icon.alt} />
							</span>
						))}
						<span class="text-foreground">work into</span>
						<span class="text-primary">content</span>
					</h1>
					<p class="text-[clamp(1rem,2vw,1.125rem)] text-muted-foreground leading-[1.7] max-w-[32.5rem] mx-auto mb-9 text-balance">
						Notra captures your team's daily work (merged PRs, closed issues, Slack conversations) and turns it into ready-to-publish content.
					</p>
					<div class="flex flex-wrap gap-3 items-center justify-center">
						<a href="https://app.notra.io" class="inline-flex items-center gap-1.5 px-7 py-3.5 bg-primary text-primary-foreground rounded-lg text-[0.9375rem] font-semibold no-underline tracking-tight hover:bg-primary/90">
							Get Started
							<svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M3 8h10M9 4l4 4-4 4" />
							</svg>
						</a>
						<a href="#how-it-works" class="inline-flex items-center gap-1.5 px-7 py-3.5 text-muted-foreground border border-border rounded-lg text-[0.9375rem] font-medium no-underline hover:border-border hover:text-foreground hover:bg-muted">See how it works</a>
					</div>
				</div>
			</div>
		</section>

		<div class="border-y border-border py-7">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12 flex items-center justify-center gap-8 flex-wrap">
				<span class="text-muted-foreground text-sm font-medium">Trusted by people at</span>
				<div class="flex items-center gap-8">
					<a href="https://consent.io?utm_source=notra" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
						<img src="/logos/brands/consent.svg" alt="Consent" class="h-5 w-auto" />
					</a>
					<a href="https://upstash.com?utm_source=notra" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
						<img src="/logos/brands/upstash.svg" alt="Upstash" class="h-7 w-auto" />
					</a>
					<a href="https://databuddy.cc?utm_source=notra" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-foreground hover:opacity-80 transition-opacity text-[0.9375rem] font-medium">
						<img src="/logos/brands/databuddy.svg" alt="DataBuddy" class="w-5 h-5 rounded-sm" />
						DataBuddy
					</a>
				</div>
			</div>
		</div>

		<section id="how-it-works" class="py-24 relative">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12">
				<div>
					<p class="text-xs uppercase tracking-[0.12em] text-primary font-semibold mb-3">HOW IT WORKS</p>
					<h2 class="font-bold text-[clamp(1.75rem,4vw,2.75rem)] leading-tight tracking-tight text-foreground mb-4 text-balance">From code to content in three steps</h2>
					<p class="text-[1.0625rem] text-muted-foreground leading-[1.7] max-w-[32.5rem] text-balance">No extra effort required. Notra works in the background, turning the outputs of your daily work into content drafts.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-0 mt-14 relative">
					{steps.map((step, i) => (
						<div class:list={[
							"p-9 px-8 border border-border relative bg-card",
							i === 0 && "max-md:rounded-t-xl max-md:rounded-b-none md:rounded-l-xl md:rounded-r-none",
							i === steps.length - 1 && "max-md:rounded-b-xl max-md:rounded-t-none max-md:-mt-px md:rounded-r-xl md:rounded-l-none md:border-l-0",
							i > 0 && i < steps.length - 1 && "rounded-none max-md:-mt-px md:border-l-0",
						]}>
							<div class="flex items-center justify-center w-9 h-9 rounded-lg bg-primary/8 text-primary text-sm font-bold mb-5">{i + 1}</div>
							<h3 class="font-semibold text-xl text-foreground mb-2.5 tracking-tight">{step.title}</h3>
							<p class="text-[0.9375rem] text-muted-foreground leading-[1.65]">{step.desc}</p>
							{i < steps.length - 1 && (
								<span class="hidden md:flex absolute -right-2 top-11 z-2 w-4 h-4 items-center justify-center text-primary opacity-60">
									<svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3l5 5-5 5" /></svg>
								</span>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="features" class="py-24 relative">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12">
				<div>
					<p class="text-xs uppercase tracking-[0.12em] text-primary font-semibold mb-3">FEATURES</p>
					<h2 class="font-bold text-[clamp(1.75rem,4vw,2.75rem)] leading-tight tracking-tight text-foreground mb-4 text-balance">Everything happens in the background</h2>
					<p class="text-[1.0625rem] text-muted-foreground leading-[1.7] max-w-[32.5rem] text-balance">No prompting. No content calendars. Just connect your tools and let Notra work.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-5 mt-14">
					{features.map((feature) => (
						<div class="border border-border rounded-xl overflow-hidden bg-card">
							<img src={feature.screenshot} alt={feature.title} class="w-full aspect-video object-cover bg-muted" loading="lazy" />
							<div class="p-7 px-7">
								<h3 class="font-semibold text-xl text-foreground mb-2.5 tracking-tight">{feature.title}</h3>
								<p class="text-[0.9375rem] text-muted-foreground leading-[1.65]">{feature.desc}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="py-24">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12">
				<div class="bg-primary rounded-xl px-8 py-16 md:px-16 text-center">
					<h2 class="font-bold text-[clamp(2rem,5vw,2.75rem)] leading-tight tracking-tight text-primary-foreground mb-4 text-balance">Start turning your work into content</h2>
					<p class="text-[1.0625rem] text-primary-foreground/70 leading-[1.7] max-w-[32.5rem] mx-auto mb-9 text-balance">Connect your tools and start generating content from your team's daily work.</p>
					<div>
						<a href="https://app.notra.io" class="inline-flex items-center gap-1.5 px-7 py-3.5 bg-background text-foreground rounded-lg text-[0.9375rem] font-semibold no-underline tracking-tight hover:bg-background/90">
							Get Started
							<svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M3 8h10M9 4l4 4-4 4" />
							</svg>
						</a>
					</div>
				</div>
			</div>
		</section>

		<footer class="py-12 border-t border-border">
			<div class="max-w-[75rem] mx-auto px-6 md:px-12">
				<div class="flex flex-col md:flex-row md:justify-between gap-10">
					<div class="shrink-0">
						<div class="inline-flex items-center gap-2 text-lg font-bold text-foreground tracking-tight mb-3">
							<svg class="w-7 h-7 shrink-0" viewBox="140 240 520 360" fill="none" xmlns="http://www.w3.org/2000/svg" set:html={logoSvg} />
							Notra
						</div>
						<p class="text-[0.8125rem] text-muted-foreground">&copy; Notra {new Date().getFullYear()}. All rights reserved.</p>
					</div>
					<div class="flex flex-wrap gap-12 md:gap-16">
						{footerCategories.map((category) => (
							<div>
								<p class="text-sm font-semibold text-foreground mb-3">{category.title}</p>
								<ul class="list-none flex flex-col gap-2.5">
									{category.links.map((link) => (
										<li>
											<a
												href={link.href}
												class="text-muted-foreground no-underline text-sm hover:text-foreground"
												{...(link.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
											>
												{link.label}
											</a>
										</li>
									))}
								</ul>
							</div>
						))}
					</div>
				</div>
			</div>
		</footer>

		<script is:inline>
			(function () {
				var toggle = document.getElementById("nav-toggle");
				var links = document.getElementById("nav-links");
				var navbar = document.getElementById("navbar");

				if (toggle && links) {
					toggle.addEventListener("click", function () {
						links.classList.toggle("open");
					});
				}

				window.addEventListener("scroll", function () {
					if (navbar) {
						navbar.classList.toggle("scrolled", window.scrollY > 10);
					}
				});

				document.querySelectorAll('a[href^="#"]').forEach(function (anchor) {
					anchor.addEventListener("click", function (e) {
						var href = anchor.getAttribute("href");
						if (!href || href.length < 2) return;
						var target = document.querySelector(href);
						if (target) {
							e.preventDefault();
							target.scrollIntoView({ behavior: "smooth", block: "start" });
							if (links) links.classList.remove("open");
						}
					});
				});
			})();
		</script>

		<script is:inline src="https://cdn.databuddy.cc/databuddy.js" data-client-id="605510ad-be85-464c-89fe-db4c6a695cd1" data-track-outgoing-links="true" data-track-scroll-depth="true" data-track-web-vitals="true" crossorigin="anonymous" async></script>
	</body>
</html>
